<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory >
  <property name="show_sql">true</property>
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.connection.url">jdbc:postgresql://ponfe01:5432/imobiliaria</property>
  <property name="hibernate.connection.username">postgres</property>
  <property name="hibernate.connection.password">imob@2019</property>
  <property name="hibernate.hbm2dll.auto">update</property>
  <property name="hibernate.c3p0.max_size">20</property>
  <property name="hibernate.c3p0.min_size">10</property>
  <property name="hibernate.c3p0.timeout">110</property>
  <property name="hibernate.c3p0.max_statements">10</property>
  <property name="hibernate.c3p0.idle_test_period">3000</property>
  <property name="hibernate.c3p0.acquire_increment">5</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <mapping class="br.com.imobiliariapo.imobiliaria.modelo.Usuario"/>
 </session-factory>
</hibernate-configuration>
